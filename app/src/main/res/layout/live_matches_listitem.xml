<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/main_container"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/match_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Match Name "
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teamAName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/teamAName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Team A "
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@id/vs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_id" />

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="V/S"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@id/teamBName"
        app:layout_constraintStart_toEndOf="@id/teamAName"
        app:layout_constraintTop_toBottomOf="@id/match_id" />
    <TextView
        android:id="@+id/teamBName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Team B "
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/match_id"
        app:layout_constraintStart_toEndOf="@id/vs"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>