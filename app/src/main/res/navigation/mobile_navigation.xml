<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cricscorer.ui.home.HomeFragment"
        android:label="New Match"
        tools:layout="@layout/fragment_new_match" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cricscorer.ui.dashboard.DashboardFragment"
        android:label="Live Matches"
        tools:layout="@layout/activity_live_matches" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cricscorer.ui.notifications.NotificationsFragment"
        android:label="Past Matches"
        tools:layout="@layout/activity_past_matches" />

</navigation>